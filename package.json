{
  "name": "repl-runner",
  "displayName": "REPL Runner",
  "description": "Run a configurable coding REPL in a terminal in the editor area. Profiles let you choose between multiple CLIs.",
  "version": "0.0.1",
  "publisher": "ryanreynolds",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rxreyn3/repl-runner-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/rxreyn3/repl-runner-vscode/issues"
  },
  "homepage": "https://github.com/rxreyn3/repl-runner-vscode#readme",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "codex",
    "cli",
    "terminal",
    "repl",
    "runner",
    "profiles",
    "quickpick",
    "editor-title",
    "status-bar",
    "toolbar",
    "button",
    "windows",
    "wsl",
    "cwd",
    "workspace",
    "ai",
    "claude",
    "claude-code",
    "anthropic",
    "gemini",
    "google-gemini",
    "qwen",
    "qwen-code"
  ],
  "activationEvents": [
    "onCommand:replrunner.run",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "REPL Runner",
      "properties": {
        "replrunner.profiles": {
          "type": "array",
          "default": [
            { "id": "codex", "label": "Codex", "command": "codex", "args": [], "icon": "media/profile-codex.svg" },
            { "id": "claude", "label": "Claude Code", "command": "claude", "args": [], "icon": "media/profile-claude.svg" },
            { "id": "gemini", "label": "Gemini CLI", "command": "gemini", "args": [], "icon": "media/profile-gemini.svg" },
            { "id": "qwen", "label": "Qwen Code", "command": "qwen", "args": [], "icon": "media/profile-qwen.svg" }
          ],
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "label": { "type": "string" },
              "command": { "type": "string" },
              "args": {
                "type": "array",
                "items": { "type": "string" },
                "default": []
              },
              "terminalName": { "type": "string", "description": "Optional terminal name for this profile; defaults to '<label>'" },
              "icon": { "type": "string", "description": "Optional icon: relative path (to the extension), absolute filesystem path, URI (e.g., file:///), or codicon id like '$(zap)'." }
            },
            "required": ["id", "label", "command"]
          },
          "markdownDescription": "List of REPL profiles to choose from. Each profile defines a label, command, and optional args. When more than one profile exists, a QuickPick lets you choose which to run."
        },
        "replrunner.cwdMode": {
          "type": "string",
          "default": "workspaceRoot",
          "enum": [
            "workspaceRoot",
            "activeWorkspace",
            "activeFileDir",
            "prompt"
          ],
          "markdownDescription": "Working directory mode. `workspaceRoot`: first workspace folder. `activeWorkspace`: workspace containing active file. `activeFileDir`: directory of active file. `prompt`: pick a folder when multiple are open."
        },
        "replrunner.rememberSelection": {
          "type": "boolean",
          "default": true,
          "description": "When in 'prompt' mode, remember the last selected folder and reuse it."
        },
        "replrunner.windowsMode": {
          "type": "string",
          "default": "block",
          "enum": [
            "block",
            "wsl",
            "native"
          ],
          "markdownDescription": "Windows handling. `block`: show an error (recommended). `wsl`: invoke via `wsl.exe`. `native`: run as-is (experimental)."
        },
        "replrunner.showStatusBar": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Show a status bar action to run a REPL from anywhere. When enabled, a right-side REPL button appears and triggers 'replrunner.run'."
        }
      }
    },
    "commands": [
      {
        "command": "replrunner.run",
        "title": "Run REPL",
        "category": "REPL",
        "icon": "$(terminal)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "replrunner.run",
          "group": "navigation@100",
          "when": "editorTextFocus"
        }
      ]
    },
    "keybindings": [
      {
        "command": "replrunner.run",
        "key": "cmd+shift+.",
        "when": "editorTextFocus && !terminalFocus"
      }
    ]
  },
  "icon": "media/icon-256.png",
  "galleryBanner": {
    "color": "#111111",
    "theme": "dark"
  },
  "scripts": {
    "test:unit": "node test/cwd.test.js && node test/command.test.js && node test/windows.test.js",
    "test:integration": "node test/runTest.js",
    "test": "npm run -s test:unit && npm run -s test:integration",
    "vscode:package": "vsce package",
    "vscode:publish": "vsce publish",
    "ovsx:publish": "ovsx publish",
    "compile": "tsc -p .",
    "watch": "tsc -w -p ."
  },
  "pretest": "npm run -s compile",
  "devDependencies": {
    "@types/node": "^16.18.0",
    "@types/vscode": "^1.75.0",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^2.32.0",
    "mocha": "^10.4.0",
    "ovsx": "^0.8.4",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "shell-quote": "^1.8.3"
  }
}

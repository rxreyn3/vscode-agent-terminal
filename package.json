{
  "name": "codex-cli-button",
  "displayName": "Codex CLI Button",
  "description": "Adds an editor toolbar button that opens a terminal in the editor area and runs codex-cli.",
  "version": "0.0.1",
  "publisher": "local",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:codexcli.run"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "title": "Codex CLI Button",
      "properties": {
        "codexcli.command": {
          "type": "string",
          "default": "codex",
          "markdownDescription": "Command to run in the editor terminal (e.g. 'codex --flag')."
        },
        "codexcli.preserveEditorFocus": {
          "type": "boolean",
          "default": true,
          "description": "Keep focus in the editor when launching."
        },
        "codexcli.cwdMode": {
          "type": "string",
          "default": "workspaceRoot",
          "enum": [
            "workspaceRoot",
            "activeWorkspace",
            "activeFileDir",
            "prompt"
          ],
          "markdownDescription": "Working directory mode. `workspaceRoot`: first workspace folder. `activeWorkspace`: workspace containing active file. `activeFileDir`: directory of active file. `prompt`: pick a folder when multiple are open."
        },
        "codexcli.rememberSelection": {
          "type": "boolean",
          "default": true,
          "description": "When in 'prompt' mode, remember the last selected folder and reuse it."
        }
      }
    },
    "commands": [
      {
        "command": "codexcli.run",
        "title": "Run Codex CLI",
        "category": "Codex",
        "icon": "media/command-icon.svg"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "codexcli.run",
          "group": "navigation@100",
          "when": "editorTextFocus"
        }
      ]
    },
    "keybindings": [
      {
        "command": "codexcli.run",
        "key": "cmd+shift+.",
        "when": "editorTextFocus && !terminalFocus"
      }
    ]
  },
  "icon": "media/icon-256.png",
  "galleryBanner": {
    "color": "#111111",
    "theme": "dark"
  },
  "scripts": {
    "test": "node test/cwd.test.js",
    "test:integration": "node test/runTest.js"
  },
  "devDependencies": {
    "@vscode/test-electron": "^2.4.1",
    "mocha": "^10.4.0"
  }
}
